---
import Hero from '~/components/widgets/Hero.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About Tobost06',
  description: 'About Tobost06 - Achievement hunter, Norwegian proofreader for Hypixel, Capybara lover, NounTown support.',
};
---

<Layout metadata={metadata}>

  <Hero
    image={{
      style: 'rounded-md; border:1px solid var(--aw-color-accent); max-height: unset; aspect-ratio: unset;',
      src: '~/assets/images/tobost-steam-2.png',
      alt: 'Tobost Steam Profile',
    }}
  >
    <Fragment slot="title">
      Tobost<span class="text-accent">06</span>
    </Fragment>

    <Fragment slot="subtitle">
      <p>Norwegian Proofreader for Hypixel 🇳🇴</p>
      <p>Steam Achievement Hunter</p>
      <p>Capybara ❤️</p>
      <p>NounTown Support 📋</p>
      <br />
      <p><a href="https://steamcommunity.com/id/Tobost06">https://steamcommunity.com/id/Tobost06</a></p>
      <p><a href="https://steamhunters.com/id/Tobost06/games">https://steamhunters.com/id/Tobost06/games</a></p>
    </Fragment>
  </Hero>
</Layout>
