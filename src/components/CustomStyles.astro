---
import '@fontsource-variable/inter';
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(86, 50, 216);
    --aw-color-secondary: rgb(76, 29, 187);
    --aw-color-accent: rgb(94, 84, 224);
    --aw-color-accent-muted: rgb(94, 84, 224, 10%);

    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(11 11 11 / 90%);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: rgb(3 6 32);

    ::selection {
      background-color: lavender;
    }
  }

  a:hover {
    color: var(--aw-color-primary);
    transition: color 0.2s ease-in-out;
  }

  .text-accent {
    text-shadow: var(--aw-color-accent) 0px 0px 5rem;
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(49, 128, 247);
    --aw-color-secondary: rgb(17, 92, 204);
    --aw-color-accent: rgb(84, 102, 201);

    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: rgb(3 6 32);

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
